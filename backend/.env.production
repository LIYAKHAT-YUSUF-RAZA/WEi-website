# Production Environment Variables
# Copy this file to .env on your server and update with production values

NODE_ENV=production
PORT=5000

# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/weintegrity?retryWrites=true&w=majority

# JWT Secret (Generate a strong random secret)
JWT_SECRET=your_very_secure_production_secret_key_change_this_to_random_string

# Email Configuration (Gmail or SMTP)
EMAIL_USER=your.production.email@gmail.com
EMAIL_PASS=your_gmail_app_password

# Client URL (Your domain)
CLIENT_URL=https://dev.weintegrity.com

# Server Configuration
MAX_REQUEST_SIZE=50mb
